generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int       @id @default(autoincrement())
  username    String    @unique(map: "username") @db.VarChar(100)
  password    String    @db.VarChar(255)
  salt        String    @db.VarChar(255)
  active      Boolean?  @default(true)
  created_at  DateTime? @default(now()) @db.Timestamp(0)
  modified_at DateTime? @db.Timestamp(0)

  @@index([username], map: "idx_users_username")
}

model visitors {
  id                    Int                      @id @default(autoincrement()) @db.UnsignedInt
  visitor_name          String                   @db.VarChar(255)
  phone_number          String                   @db.VarChar(20)
  visitor_profile       visitors_visitor_profile
  visitor_profile_other String?                  @db.VarChar(255)
  staff_id              Int?                     @db.UnsignedInt
  filled_by             String                   @db.VarChar(255)
  checked_out_at        DateTime?                @db.DateTime(0)
  created_at            DateTime?                @default(now()) @db.DateTime(0)
  modified_at           DateTime?                @default(now()) @db.DateTime(0)
  staff                 staff?                   @relation(fields: [staff_id], references: [id], map: "fk_visitors_staff")

  @@index([checked_out_at], map: "idx_checked_out_at")
  @@index([created_at], map: "idx_created_at")
  @@index([filled_by], map: "idx_filled_by")
  @@index([phone_number], map: "idx_phone_number")
  @@index([visitor_profile], map: "idx_visitor_profile")
  @@index([staff_id], map: "idx_staff_id")
}

model staff {
  id           Int        @id @default(autoincrement()) @db.UnsignedInt
  name         String     @db.VarChar(255)
  phone_number String     @db.VarChar(20)
  active       Boolean?   @default(true)
  created_at   DateTime?  @default(now()) @db.DateTime(0)
  modified_at  DateTime?  @default(now()) @db.DateTime(0)
  visitors     visitors[]

  @@index([active], map: "idx_active")
  @@index([name], map: "idx_name")
  @@index([phone_number], map: "idx_phone_number")
}

enum visitors_visitor_profile {
  Player
  Visitor
  Other
}
